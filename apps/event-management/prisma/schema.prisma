datasource postgres {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Customer {
  createdAt DateTime @default(now())
  email     String?
  events    Event[]
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  updatedAt DateTime @updatedAt
}

model Event {
  createdAt   DateTime  @default(now())
  customer    Customer? @relation(fields: [customerId], references: [id])
  customerId  String?
  date        DateTime?
  description String?
  id          String    @id @default(cuid())
  updatedAt   DateTime  @updatedAt
}
